<div class="container">
 <div class="row">
    <div class="col-12">
        <div class="card mb-3">
<h1 class="text-center">Clientes</h1>
          <div class="card-body p-2">
          <%= link_to 'New Client', new_client_path, class:'btn btn-primary' %>



<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Telefono</th>
      <th scope="col">Email</th>
      <th scope="col">Mascotas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <th><%= client.count_pets  %> </td>
        <td><%= link_to 'Show', client, class:'btn btn-primary' %>
        <%= link_to 'Edit', edit_client_path(client), class:'btn btn-primary' %>
        <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
</div>
</div>
