<p id="notice"><%= notice %></p>

<div class="container">
 <div class="row">
    <div class="col-12">
        <div class="card mb-3">
<h1 class="text-center">Pets</h1>
          <div class="card-body p-2">

<%= link_to 'New Pet', new_pet_path, class:'btn btn-primary' %>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Raza</th>
      <th scope="col">Fecha de nacimiento</th>
      <th scope="col">Visitas</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Acciones</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.birthday %></td>
        <td><%= pet.pet_visits %></td>
        <td><% pet.pethistories.each do |pethistory| %>
            <%= pethistory.description %>
        <% end %>
        </td>
        <td><%= link_to 'Show', pet, class:'btn btn-primary' %>
        <%= link_to 'Edit', edit_pet_path(pet), class:'btn btn-primary' %>
        <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>

</div>
</div>
</div>